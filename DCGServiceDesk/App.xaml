<Application
    x:Class="DCGServiceDesk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DCGServiceDesk"
             xmlns:viewmodels="clr-namespace:DCGServiceDesk.ViewModels"
             xmlns:views="clr-namespace:DCGServiceDesk.View">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Resources/Fonts/axaxax/#Axaxax Rg</FontFamily>
            <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
                <views:LoginView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                <views:Home />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
