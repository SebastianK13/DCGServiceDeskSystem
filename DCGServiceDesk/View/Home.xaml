<UserControl x:Class="DCGServiceDesk.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DCGServiceDesk.View"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <DockPanel>
                <Menu Background="#D6D6CE" DockPanel.Dock="Top">
                    <MenuItem Header="_File" Height="30">
                        <MenuItem Header="_New" />
                        <MenuItem Header="_Open" />
                        <MenuItem Header="_Save" />
                        <Separator />
                        <MenuItem Header="_Exit" />
                    </MenuItem>
                </Menu>
            </DockPanel>
        </Grid>
        <Border Grid.Row="1" BorderBrush="#D6D6CE" BorderThickness="20,0,10,8">
            <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="2">
                    <Grid Grid.Column="0" Height="auto">
                        <StackPanel HorizontalAlignment="Stretch"></StackPanel>
                        <ScrollViewer HorizontalScrollBarVisibility="Hidden" Margin="0, 0, 0 , 0"></ScrollViewer>
                    </Grid>
                </Border>

                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="2, 2, 2, 2" Margin="2, 0,0,0">
                    <Grid Grid.Column="1">
                        <ScrollViewer HorizontalScrollBarVisibility="Hidden" Margin="0, 0, 0 , 0"></ScrollViewer>
                    </Grid>
                </Border>

        </Grid>
        </Border>
    </Grid>

</UserControl>
