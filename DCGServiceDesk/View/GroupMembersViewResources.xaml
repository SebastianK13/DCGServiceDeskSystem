<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DCGServiceDesk.View">

    <DataTemplate x:Key="UsernameCellTemplateStyle">
        <StackPanel Margin="0,2,6,2">
            <TextBlock Margin="-6,0,0,0" TextAlignment="Center" Text="{Binding Username}" Width="{Binding Path=ActualWidth, ElementName=UColumn}"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="FNameCellTemplateStyle">
        <StackPanel Margin="6,2,6,2">
            <TextBlock Margin="-6,0,0,0" TextAlignment="Center" Text="{Binding Firstname}" Width="{Binding ActualWidth, ElementName=FColumn}"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="SNameCellTemplateStyle">
        <StackPanel Margin="6,2,6,2">
            <TextBlock Margin="-6,0,0,0" TextAlignment="Center" Text="{Binding Surname}" Width="{Binding ActualWidth, ElementName=SColumn}"/>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>